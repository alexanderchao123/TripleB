<section id="homepage-hero">
  <div class='small-10 medium-6 large-4 columns' style="float:right">
    <%= form_for @user do |f| %>
      <div class="row">
        <div class='small-12 columns'>
          <div id='sign-up-form'>
            <%= f.text_field :email, placeholder: "Email" %>
            <%= f.text_field :first_name, placeholder: "Full Name" %>
            <%= f.text_field :phone, placeholder: "Phone Number" %>
            <%= f.password_field :password, placeholder: "Password" %>
            <input type='hidden' name="location[latitude]" id="latitude" value=""/>
            <input type='hidden' name="location[longitude]" id="longitude" value=""/>
            <%= f.submit 'Signup', class: 'button small expand radius' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
